<div class="bar-span">
  <span>Select a pour to claim</span>
</div>

{{#if pours}}
<table id="pours" class="kegums-table">
  <thead class="hidden">
    <tr>
      <td></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    {{#each pours}}
    <tr id="{{id}}" class="clickable">
      <td>{{timeDisplay}}</td>
      <td>{{getFixedNumber volume}}oz</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p class="empty-message">All pours accounted for.</p>
{{/if}}
