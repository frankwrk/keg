@import nib

body
  background-color: #FFF

::selection
  background: #999

.content
  margin-top: 80px

  h3
    font-size: 23px

  > div
    padding-left: inherit

  .brand-banner
    border-radius(6px)
    box-shadow(inset 0 0 5px 5px #222)
    width: 310px
    height: 114px
    padding: 5px

    > div
      border-radius(6px)
      overflow: hidden

      img
        width: 300px
        height: 104px

body.inverse
  background-color: #1a1a1a
  color: #999

  .content
    border-radius(6px)
    background-color: #101010

    .row
      margin-bottom: 20px

    .jumbotron
      box-shadow(inset 0 0 5px 5px #222)
      margin-bottom: 0
      background-color: #121212
      border: 1px solid #2a2a2a
