@import nib

.bar-span
  height: 50px
  background-color: #EEE
  color: #333
  font: 30px/1 "Lato"
  letter-spacing: -2px
  line-height: 45px

  &.thin
    height: 10px

@media (min-width: 768px)
  .bar-span
    height: 100px
    font: 80px/1 "Lato"
    letter-spacing: -5px

    &.thin
      height: 20px


.stats-block
  height: 200px
  margin: 25px

  .labels
    &.last-pour, &.fridge-temp
      padding-top: 45px

    > span
      font: 30px/1 "PT Serif"

    > .beers-number
      position: absolute
      left: 50%

      &.beers-separator
        margin-left: -4px
      &.beers-drank
        margin-left: 40px
      &.beers-left
        margin-left: -100px

  .numbers
    height: 150px

    > span
      font: 120px/1 "Lato"
      padding: 0 10px

      &.separator
        font-height: 10px


.spanning-full
  width: 100%
  text-align: center

#content
  margin-top: 50px

.brand-banner
  padding: 15%
  width: 100%
  overflow: hidden
  position: relative

  img
    position: absolute
    top: -5%
    left: 0
    width: 100%

@media (min-width: 768px)
  .brand-banner
    padding: 10%

    img
      top: -10%








.large-text
  font-size: 30px

.content
  h3
    font-size: 23px

  form
    margin-left: 15px

    label
      display: block
      line-height: 1

    input
      margin-bottom: 20px

body.inverse
  background-color: #1a1a1a
  color: #999

  .content
    border-radius(6px)
    background-color: #101010

    .row
      margin-bottom: 20px

      &.chart-wrap
        margin-bottom: 0

    .jumbotron
      box-shadow(inset 0 0 5px 5px #222)
      margin-bottom: 0
      background-color: #121212
      border: 1px solid #2a2a2a

    .chart
      height: 300px
      margin-bottom: 50px

table.kegums-table
  width: 100%
  border-collapse: separate
  border-spacing: 10px

  tbody >
    tr
      &.clickable:hover
        cursor: pointer

      > td
        background-color: #444
        border-radius(4px)
        padding: 5px 0 5px 10px
        color: #999

  tbody.leaders tr:first-child td:first-child:after
    content: url(/static/images/crown.png)
    margin-left: 10px

#create_drinker
  margin-top: 25px

  > button
    float: right

p.empty-message
  margin-top: 50px
