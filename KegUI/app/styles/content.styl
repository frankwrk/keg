@import nib

body
  background-color: #FFF

::selection
  background: #999

.large-text
  font-size: 30px

.content
  h3
    font-size: 23px

  > div
    padding-left: inherit

  .brand-banner
    border-radius(6px)
    box-shadow(inset 0 0 5px 5px #444)
    border: 1px solid #2a2a2a

    width: 310px
    height: 114px
    margin-top: -5px
    padding: 5px

    > p
      text-align: center
      margin-top: 40px

    > div
      border-radius(6px)
      overflow: hidden

      img
        display: none
        width: 300px
        height: 104px

  form
    margin-left: 15px

    label
      display: block
      line-height: 1

    input
      margin-bottom: 20px

body.inverse
  background-color: #1a1a1a
  color: #999

  .content
    border-radius(6px)
    background-color: #101010

    .row
      margin-bottom: 20px

      &.chart-wrap
        margin-bottom: 0

    .jumbotron
      box-shadow(inset 0 0 5px 5px #222)
      margin-bottom: 0
      background-color: #121212
      border: 1px solid #2a2a2a

    .chart
      height: 300px
      margin-bottom: 50px

table#drinkers
  width: 100%
  border-collapse: separate
  border-spacing: 10px

  tbody >
    tr
      &.clickable:hover
        cursor: pointer

      > td
        background-color: #444
        border-radius(4px)
        padding: 5px 0 5px 10px

  tbody.leaders tr:first-child td:first-child:after
    content: url(/static/images/crown.png)
    margin-left: 10px

#create
  margin-top: 25px

  > button
    float: right
