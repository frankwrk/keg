.content
  margin-top: 51px

  .col-sm-6
    width: 100%
    text-align: center

    &.banner-wrap-responsive
      padding-left: 0

    > div
      margin: 0 auto
      width: 160px

  #keg_wrap
    margin-bottom: 10px

  #brand_banner_wrap
    width: 310px

    > div
      width: 298px


@media (min-width: 768px)
  .content
    margin-top: 80px

    .col-sm-6
      float: left
      width: 50%
      text-align: left

      &.banner-wrap-responsive
        padding-left: 15px

      > .ticker-wrap, > .ticker-wrap > div
        margin: 0
        width: 189px

    #brand_banner_wrap
      margin: 0

      > div
        width: 298px
