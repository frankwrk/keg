.ticker-container
  padding-top: 30px
  height: 80px

.ticker-wrap
  position: absolute
  left: 50%

  &.last-pour
    width: 324px
    margin-left: -162px

    .ticker
      font: 60px/1 "Lato"

      > span
        width: 40px

  &.fridge-temp
    width: 200px
    margin-left: -100px

    .ticker
      font: 80px/1 "Lato"

.ticker
  > span
    display: block
    float: left
    color: #999
    width: 50px

@media (min-width: 500px)
  .ticker-container
    .ticker-wrap.last-pour
      width: 400px
      margin-left: -200px

      .ticker
        font: 80px/1 "Lato"

        > span
          width: 50px
